  body
    #navigation
    #content
      #header
        #main-nav
          nav#rightmenu.right
            ul
              li
                a(href="#")
                  span.icon.icon-search
              li
                a(href="#")
                  span.icon.icon-user
          #logo
            img(id="logoimg", src="/images/logo/pb_red.png", height="60px", alt="pokebattle.com")
          nav#sections
            ul
              li
                a(href="#") Simulator
              li
                a(href="#") Forums
              li
                a(href="#") Pokedex
              li
                a(href="#") Gadgets
              li
                a(href="#") Videos
        #sub-nav
      #main-section.clearfix
        .window.chat_window.hidden
          .chat.half_width
          .main_buttons.half_width
            .section
              .button.big.find_battle
                span.glyphicon.glyphicon-globe
                |  Find battle
              p Format:
              .dropdown
                .select.select-format(data-toggle = "dropdown")
                ul.dropdown-menu.format-dropdown(role = "menu")
                  li
                    a.select-format-dropdown-item(data-format="xy") Pokebank XY
                  li
                    a.select-format-dropdown-item(data-format="bw") Pokemon BW
              p Select a team:
              .dropdown
                .select.select-team(data-toggle = "dropdown")
                  | Your team
                ul.dropdown-menu.team-dropdown(role = "menu")
            .section
              .button.teambuilder_button
                span.glyphicon.glyphicon-pencil
                |  Teambuilder
        #teambuilder-section.window.hidden
    #login-modal.modal.hide(aria-hidden="true", data-server-event="login")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") ×
        h3 Login to PokeBattle
      .modal-body
        .form-errors.alert.alert-error.hidden
        form.form-horizontal
          .control-group
            label.control-label(for="login-email-input") Email
            .controls
              input#login-email-input(type="text", placeholder="Email", data-key="email")
              span.help-inline
          .control-group
            label.control-label(for="login-password-input") Password
            .controls
              input#login-password-input(type="password", placeholder="Password", data-key="password")
              span.help-inline
      .modal-footer
        button.btn.btn-primary.modal-submit Sign in
        button.btn(data-dismiss="modal", aria-hidden="true") Close
    #register-modal.modal.hide(aria-hidden="true", data-server-event="register")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") ×
        h3 Register for PokeBattle
      .modal-body
        .form-errors.alert.alert-error.hidden
        form.form-horizontal
          .control-group
            label.control-label(for="register-username-input") Username
            .controls
              input#register-username-input(type="text", placeholder="Username", data-key="username")
              span.help-inline
          .control-group
            label.control-label(for="register-email-input") Email
            .controls
              input#register-email-input(type="text", placeholder="Email", data-key="email")
              span.help-inline
          .control-group
            label.control-label(for="register-password-input") Password
            .controls
              input#register-password-input(type="password", placeholder="Password", data-key="password")
              span.help-inline
          #register-confirm-password.control-group.hidden
            label.control-label(for="confirm-password-input") Confirm Password
            .controls
              input#confirm-password-input(type="password", placeholder="Confirm Password")
              span.help-inline
      .modal-footer
        button.btn.btn-primary.modal-submit Register
        button.btn(data-dismiss="modal", aria-hidden="true") Close
    if local
      :coffeescript
        @PokeBattle ?= {}
        @PokeBattle.local = true
    script(src='/js/data.js')
    script(src='/js/vendor.js')
    script(src='/js/templates.js')
    script(src='/js/app.js')
