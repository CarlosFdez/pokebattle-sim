.main_buttons
  position absolute
  top 0
  left 0
  bottom 0

  .button
    display block
    float none
    text-align center
    margin 0 auto

  p
    margin 1em 0 0 0
    font-weight 700

  .select
    cursor pointer
    border 1px solid #aaa
    border-radius 3px
    background #f0f0f0
    padding 10px
    &:hover
      background #fff
      border-color #bbb

.section
  width 80%
  background rgba(64, 64, 64, .15)
  margin 16px auto
  padding 8px
  border-radius 8px
