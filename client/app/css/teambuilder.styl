.teambuilder
  position: absolute
  top 0
  bottom 0
  left 0
  right 0

.teambuilder .navigation
  position absolute
  top 0
  bottom 0
  background-color $body-color
  width: 150px

  ul
    list-style-type none
    padding 0
    margin 0

  li, div
    display block
    padding 14px 0 14px 24px
    background-color rgba(0, 0, 0, 0.05)
    border-bottom rgba(0, 0, 0, 0.1)

  li:hover, div:hover
    cursor pointer
    background-color rgba(0, 0, 0, 0.1)

.teambuilder .nature_ability_item
  display: table

  div
    display: table-row
    
  span, input, select
    display: table-cell

.teambuilder .pokemon_edit
  position absolute
  overflow: auto
  left 150px
  top 0
  bottom 0
  right 0
  background white
  padding: 15px

.teambuilder .move_table
  width 100%
  border-collapse collapse

  td, th
    text-align left
    line-height 1.5em
    border 1px solid #888
    padding 0 5px

  th
    background-color $body-color