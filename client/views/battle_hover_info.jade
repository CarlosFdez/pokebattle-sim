p
  each type in pokemon.getForme().types
    | [#{type}]

p
  | HP: #{pokemon.getPercentHP()}%
  if pokemon.has('hp')
    |  (#{pokemon.get('hp')}/#{pokemon.get('maxHP')})

if pokemon.has('item')
  p Item: #{pokemon.get('item')}

if pokemon.has('ability')
  p Ability: #{pokemon.get('ability')}
else
  p Possible abilities: #{pokemon.getAbilities().join(', ')}

p Status: #{pokemon.getStatus()}

if pokemon.has('moves')
  p
    each moveName in pokemon.get('moves')
      | - #{moveName}
      br
