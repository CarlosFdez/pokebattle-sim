.popup(data-user-id=id)
  .title
    .title_name
      span.icon.icon-bubbles
      |  #{title}
    .title_buttons
      .title_button.title_minimize
        .icon.icon-minus
      .title_button.title_close
        .icon.icon-close
  .popup_menu.clearfix
    .popup_menu_button.challenge_button
      .icon.icon-notification(title = "Challenge")
  .challenge.outside
    .challenge_wrapper
      .challenge_data
      .challenge_buttons
        .send_challenge.btn.btn-primary= buttonText
        .cancel_challenge.btn Cancel
  .popup_messages
  .chat_input_pane
    .chat_input_wrapper
      input.chat_input(type = 'text', placeholder = "Send a message...")
